---
export interface Props {
  isActive: boolean;
  href: string;
}

const classIfNotActive = "hover:bg-gray-300 hover:bg-opacity-75";
const { isActive, href } = Astro.props;
---

<a
  href={href}
  draggable="true"
  role="button"
  title="Hover chip"
  class={`h-8 px-3 py-5  w-max flex gap-2 justify-center items-center rounded-full bg-gray-200 text-gray-700 focus:bg-gray-300 focus:text-blue-900 active:text-primary active:bg-blue-100 disabled:bg-gray-100 disabled:text-gray-400 dark:bg-gray-700 dark:text-gray-300 dark:active:text-primary ${!isActive ? classIfNotActive : ""}`}
>
  <slot />
  <span class="block text-md font-medium"><slot name="name" /></span>
</a>
