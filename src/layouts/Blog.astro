---
import BlogHeader from '../components/BlogHeader.astro'
import Page from '../components/Page.astro'

export interface Props {
    title: string
    description: string
    publishDate: string
    heroImage: string
    alt: string
}

const { title, description, publishDate, heroImage, alt } = Astro.props
---

<Page {title} {description}>

<BlogHeader title='Blog' />

{heroImage && <div>
    <img class="w-full" loading="eager" src={heroImage} alt={alt} />
</div>}

<div class='flex justify-center'>
    <div class="prose text-lg">
        <h1 class="text-2xl font-semibold mt-8">{title}</h1>
        <h3 class="text-lg">{description}</h3>
        <p class="font-extralight mb-8">{publishDate}</p>
        <slot />
    </div>
</div>
</Page>